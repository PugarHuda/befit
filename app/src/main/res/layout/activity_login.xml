<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_scroll_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@drawable/loginn"
    android:padding="16dp">

    <LinearLayout
        android:id="@+id/main_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="16dp"
        android:layout_margin="24dp"
        android:background="@drawable/rounded_background">




    <!-- Login Title -->
        <TextView
            android:id="@+id/login_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Login"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/login_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enter your email and password to log in"
            android:textSize="14sp"
            android:textColor="@color/gray"
            android:layout_marginBottom="24dp" />

        <!-- Email Input -->
        <EditText
            android:id="@+id/email_input"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Email"
            android:background="@drawable/input_filed"
            android:padding="12dp"
            android:inputType="textEmailAddress"
            android:layout_marginBottom="12dp"/>

        <!-- Password Input -->
        <EditText
            android:id="@+id/password_input"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Password"
            android:background="@drawable/input_filed"
            android:padding="12dp"
            android:inputType="textPassword"
            android:layout_marginBottom="8dp" />

        <!-- Remember Me and Forgot Password -->

        <!-- Login Button -->
        <LinearLayout
            android:id="@+id/remember_forgot_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/remember_me_checkbox"
                android:layout_width="141dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:text="Remember me"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/forgot_password_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity=""
                android:layout_marginHorizontal="28dp"
                android:text="Forgot Password ?"
                android:textColor="@color/blue" />

        </LinearLayout>

        <Button
            android:id="@+id/login_button"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Log In"
            android:backgroundTint="@color/blue"
            android:textColor="@color/white"
            android:layout_marginBottom="16dp" />

        <!-- Or Login With -->

        <TextView
            android:id="@+id/or_login_with_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Or login with"
            android:textSize="14sp"
            android:textColor="@color/gray"
            android:layout_gravity="center"
            android:layout_marginBottom="16dp" />

        <!-- Social Media Login Buttons -->
        <LinearLayout
            android:id="@+id/social_buttons_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <ImageView
                android:id="@+id/google_button"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:src="@drawable/google"
                android:background="@drawable/bg_social_button"
                android:padding="12dp" />

            <ImageView
                android:id="@+id/facebook_button"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:src="@drawable/facebok"
                android:background="@drawable/bg_social_button"
                android:padding="12dp" />

            <ImageView
                android:id="@+id/apple_button"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:src="@drawable/apple"
                android:background="@drawable/bg_social_button"
                android:padding="12dp" />

            <ImageView
                android:id="@+id/mobile_button"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:src="@drawable/mobile"
                android:background="@drawable/bg_social_button"
                android:padding="12dp" />
        </LinearLayout>

        <!-- Sign Up Link -->
        <TextView
            android:id="@+id/sign_up_link"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Donâ€™t have an account? Sign Up"
            android:textSize="14sp"
            android:textColor="@color/blue"
            android:layout_gravity="center"
            android:layout_marginTop="24dp" />

    </LinearLayout>
</ScrollView>
