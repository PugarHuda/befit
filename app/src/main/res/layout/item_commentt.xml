<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp">

    <!-- Header dengan avatar, nama pengguna, dan waktu -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <!-- Avatar pengguna -->
        <ImageView
            android:id="@+id/avatarImageView"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/char2"
            android:contentDescription="User avatar" />

        <!-- Nama pengguna dan waktu -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="8dp">

            <TextView
                android:id="@+id/usernameTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Isabella Ibel"
                android:textColor="#000000"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/timeTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1 hr ago"
                android:textColor="#8E8E93"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>

    <!-- Konten komentar utama -->
    <TextView
        android:id="@+id/commentTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="Bagaimana cara mengenali gejala depresi pada diri sendiri atau orang lain?"
        android:textColor="#000000"
        android:textSize="14sp" />

    <!-- Reaksi (like dan komentar) -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/likeTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_like"
            android:drawablePadding="4dp"
            android:text="2"
            android:textColor="#8E8E93"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/commentCountTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_comment"
            android:drawablePadding="4dp"
            android:text="2"
            android:textColor="#8E8E93"
            android:textSize="12sp"
            android:layout_marginStart="16dp" />
    </LinearLayout>

    <!-- Garis vertikal pemisah komentar utama dan balasan komentar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp">

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginStart="48dp"
            android:background="@android:color/darker_gray" />

        <!-- Komentar balasan akan diletakkan setelah garis ini -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="8dp">

            <!-- Balasan Komentar -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/replyAvatarImageView"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/char1"
                    android:contentDescription="User avatar"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginStart="8dp">

                    <TextView
                        android:id="@+id/replyUsernameTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Caalaa"
                        android:textColor="#000000"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/replyTimeTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="5 mins ago"
                        android:textColor="#8E8E93"
                        android:textSize="12sp" />
                </LinearLayout>
            </LinearLayout>

            <!-- Konten balasan -->
            <TextView
                android:id="@+id/replyCommentTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Mungkin bisa dilihat kalau suka menyendiri"
                android:textColor="#000000"
                android:textSize="14sp" />
        </LinearLayout>
    </LinearLayout>

    <!-- Balasan tambahan akan diletakkan di bawah jika ada -->
    <LinearLayout
        android:id="@+id/repliesLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/repliesRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

</LinearLayout>